<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
    <changeSet id="001" author="root">
        <createTable tableName="TRANSACTION">
            <column name="ID" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ACCOUNT_ID" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="AMOUNT" type="decimal(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="CURRENCY" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
            <column name="TYPE" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="MERCHANT" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="MERCHANT_CATEGORY" type="varchar(50)"/>
            <column name="TIMESTAMP" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="varchar(500)"/>
            <column name="LOCATION_LATITUDE" type="double"/>
            <column name="LOCATION_LONGITUDE" type="double"/>
            <column name="LOCATION_CITY" type="varchar(100)"/>
            <column name="LOCATION_COUNTRY" type="varchar(2)"/>
            <column name="IP_ADDRESS" type="varchar(45)"/>
            <column name="DEVICE_ID" type="varchar(100)"/>
            <column name="DEVICE_TYPE" type="varchar(50)"/>
            <column name="OPERATING_SYSTEM" type="varchar(50)"/>
            <column name="BROWSER" type="varchar(50)"/>
            <column name="USER_AGENT" type="varchar(500)"/>
            <column name="CREATED_AT" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_AT" type="timestamp"/>
        </createTable>

        <createIndex tableName="TRANSACTION" indexName="IDX_ACCOUNT_ID">
            <column name="ACCOUNT_ID"/>
        </createIndex>

        <createIndex tableName="TRANSACTION" indexName="IDX_TIMESTAMP">
            <column name="TIMESTAMP"/>
        </createIndex>

        <createIndex tableName="TRANSACTION" indexName="IDX_STATUS">
            <column name="STATUS"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>